<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns:ssh="uri:oozie:ssh-action:0.2" xmlns:shell="uri:oozie:shell-action:0.3" xmlns="uri:oozie:workflow:0.5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="uri:oozie:workflow:0.5
C:\Java\oozie\wf-0.5.xsd
uri:oozie:shell-action:0.3
C:\Java\oozie\shell-action-0.3.xsd
uri:oozie:ssh-action:0.2
C:\Java\oozie\ssh-action-0.2.xsd" name="smsc">
    <parameters>
        <property>
            <name>wfName</name>
            <value>smsc</value>
        </property>
    </parameters>
	<start to="SftpGetRawFiles"/>
	<kill name="fail">
        <message>Java failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
	<action name="SftpGetRawFiles">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>etl.engine.ETLCmdMain</main-class>
			<arg>etl.cmd.SftpCmd</arg>
			<arg>${wfName}</arg>
			<arg>${wf:id()}</arg>
			<arg>/mtccore/etlcfg/smsc_sftp.properties</arg>
			<arg>${nameNode}</arg>
		</java>
		<ok to="UpdateTimeStamp"/>
		<error to="fail"/>
	</action>
	<action name="UpdateTimeStamp">
        <map-reduce>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="/mtccore/csvdata/csv/${wf:id()}"/>
            </prepare>
            <configuration>
                <property>
                    <name>mapred.mapper.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.reducer.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapreduce.job.map.class</name>
                    <value>etl.engine.InvokeMapper</value>
                </property>
                <property>
                    <name>mapreduce.job.reduce.class</name>
                    <value>etl.engine.InvokeReducer</value>
                </property>
                <property>
                    <name>mapreduce.job.inputformat.class</name>
                    <value>org.apache.hadoop.mapreduce.lib.input.TextInputFormat</value>
                </property>
                <property>
                    <name>mapreduce.job.outputformat.class</name>
                    <value>org.apache.hadoop.mapreduce.lib.output.TextOutputFormat</value>
                </property>
                <property>
                    <name>mapreduce.job.output.key.class</name>
                    <value>org.apache.hadoop.io.Text</value>
                </property>
                <property>
                    <name>mapreduce.job.output.value.class</name>
                    <value>org.apache.hadoop.io.Text</value>
                </property>
                <property>
                    <name>mapreduce.task.timeout</name>
                    <value>0</value>
                </property>
                <property>
                    <name>mapreduce.input.fileinputformat.inputdir</name>
                    <value>/mtccore/smscraw/orgcsv/${wf:id()}</value>
                </property>
                <property>
                    <name>mapreduce.output.fileoutputformat.outputdir</name>
                    <value>/mtccore/smscraw/csv/${wf:id()}</value>
                </property>
                <property>
                    <name>cmdClassName</name>
                    <value>etl.cmd.CsvTransformCmd</value>
                </property>
                <property>
                    <name>wfName</name>
                    <value>${wfName}</value>
                </property>
                <property>
                    <name>wfid</name>
                    <value>${wf:id()}</value>
                </property>
                <property>
                    <name>staticConfigFile</name>
                    <value>/mtccore/etlcfg/smsc.updatedt.properties</value>
                </property>
            </configuration>
        </map-reduce>
        <ok to="UpdateAggrSchema"/>
        <error to="fail"/>
    </action>
	<action name="UpdateAggrSchema">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>etl.engine.ETLCmdMain</main-class>
            <arg>etl.cmd.CsvAggregateCmd</arg>
            <arg>${wfName}</arg>
            <arg>${wf:id()}</arg>
            <arg>/mtccore/etlcfg/smsc_aggr.properties</arg>
            <arg>${nameNode}</arg>
        </java>
        <ok to="AggregateCsv"/>
        <error to="fail"/>
    </action>
    <action name="AggregateCsv">
        <map-reduce>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="/mtccore/smscraw/aggr/${wf:id()}"/>
            </prepare>
            <configuration>
                <property>
                    <name>mapred.mapper.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.reducer.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapreduce.job.map.class</name>
                    <value>etl.engine.InvokeMapper</value>
                </property>
                <property>
                    <name>mapreduce.job.reduce.class</name>
                    <value>etl.engine.InvokeReducer</value>
                </property>
                <property>
                    <name>mapreduce.output.textoutputformat.separator</name>
                    <value>,</value>
                </property>
                <property>
                    <name>mapreduce.task.timeout</name>
                    <value>0</value>
                </property>
                <property>
                    <name>mapreduce.input.fileinputformat.inputdir</name>
                    <value>/mtccore/smscraw/csv/${wf:id()}</value>
                </property>
                <property>
                    <name>mapreduce.output.fileoutputformat.outputdir</name>
                    <value>/mtccore/smscraw/aggr/${wf:id()}</value>
                </property>
                <property>
                    <name>mapreduce.map.output.key.class</name>
                    <value>org.apache.hadoop.io.Text</value>
                </property>
                <property>
                    <name>mapreduce.map.output.value.class</name>
                    <value>org.apache.hadoop.io.Text</value>
                </property>
                <property>
                    <name>cmdClassName</name>
                    <value>etl.cmd.CsvAggregateCmd</value>
                </property>
                <property>
                    <name>wfName</name>
                    <value>${wfName}</value>
                </property>
                <property>
                    <name>wfid</name>
                    <value>${wf:id()}</value>
                </property>
                <property>
                    <name>staticConfigFile</name>
                    <value>/mtccore/etlcfg/smsc_aggr.properties</value>
                </property>
            </configuration>
        </map-reduce>
        <ok to="LogAggrCsvInfo"/>
        <error to="fail"/>
    </action>
    <action name="LogAggrCsvInfo">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>etl.engine.ETLCmdMain</main-class>
            <arg>etl.cmd.SendLogCmd</arg>
            <arg>${wfName}</arg>
            <arg>${wf:id()}</arg>
            <arg>/mtccore/etlcfg/smsc_sendlog.properties</arg>
            <arg>${nameNode}</arg>
            <arg>AggregateCsv</arg>
            <arg>${hadoop:counters("AggregateCsv")["org.apache.hadoop.mapred.Task$Counter"]["MAP_INPUT_RECORDS"]}</arg>
            <arg>${hadoop:counters("AggregateCsv")["org.apache.hadoop.mapred.Task$Counter"]["MAP_OUTPUT_RECORDS"]}</arg>
            <arg>${hadoop:counters("AggregateCsv")["org.apache.hadoop.mapred.Task$Counter"]["REDUCE_OUTPUT_RECORDS"]}</arg>
        </java>
        <ok to="copyAggr"/>
        <error to="fail"/>
    </action>
    <action name="copyAggr">
         <fs>
            <move 
                source='${nameNode}/mtccore/smscraw/aggr/${wf:id()}/SPA_merge-r-00000' 
                target='/mtccore/smscraw/csv/${wf:id()}/SPA_merge.csv'/>
            <delete path='${nameNode}/mtccore/smscraw/aggr/${wf:id()}'/>
         </fs>
        <ok to="loadData"/>
        <error to="fail"/>
    </action>
	<action name="loadData">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>etl.engine.ETLCmdMain</main-class>
			<arg>etl.cmd.LoadDataCmd</arg>
			<arg>${wfName}</arg>
			<arg>${wf:id()}</arg>
			<arg>/mtccore/etlcfg/smsc_loaddata.properties</arg>
			<arg>${nameNode}</arg>
		</java>
		<ok to="BackupData"/>
		<error to="fail"/>
	</action>
	<action name="BackupData">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<main-class>etl.engine.ETLCmdMain</main-class>
			<arg>etl.cmd.BackupCmd</arg>
			<arg>${wfName}</arg>
			<arg>${wf:id()}</arg>
			<arg>/mtccore/etlcfg/smsc_backup.properties</arg>
			<arg>${nameNode}</arg>
		</java>
		<ok to="end"/>
		<error to="fail"/>
	</action>
	<end name="end"/>
</workflow-app>
